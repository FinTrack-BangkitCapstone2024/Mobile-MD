<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Activity.profile.ChangePasswordActivity">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="button back"
        android:src="@drawable/vector_back_button"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#38434D"
        app:shapeAppearanceOverlay="@style/CustomCardShape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:strokeColor="#727272"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#334E4E61">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Corrent Password"
                    android:textColor="#9EA5AA"
                    android:fontFamily="@font/inter_semibold"
                    />


               <com.example.fintrack_bangkitcapstone2024.Component.CvPass
                android:id="@+id/cv_current_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.02"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="#A9A9A9"
                android:background="@drawable/border_ed_edit_profile"
                android:hint="Enter Your Corrent Password"
                android:drawablePadding="10dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="New Password"
                    android:textColor="#9EA5AA" />


                <com.example.fintrack_bangkitcapstone2024.Component.CvPass
                    android:id="@+id/cv_pass_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:inputType="none"
                    android:textColor="#A9A9A9"
                    android:layout_marginTop="5dp"
                    android:textColorHint="#A9A9A9"
                    android:background="@drawable/border_ed_edit_profile"
                    android:hint="Enter New Password"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Confirm Password"
                    android:layout_marginTop="11dp"
                    android:textColor="#9EA5AA"
                    android:fontFamily="@font/inter_semibold" />

                <com.example.fintrack_bangkitcapstone2024.Component.CvPassSame
                    android:id="@+id/cv_pass_same"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="5dp"
                    android:textColor="#A9A9A9"
                    android:textColorHint="#A9A9A9"
                    android:background="@drawable/border_ed_edit_profile"
                    android:hint="Enter Your Business Addres" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btn_save_changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="180dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/inter"
                android:background="@drawable/border_buttom"
                app:backgroundTint="#788EAB"
                android:text="Save Changes"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>