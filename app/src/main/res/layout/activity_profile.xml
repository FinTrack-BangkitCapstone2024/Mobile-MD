<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_back_button"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#38434D"
        app:shapeAppearanceOverlay="@style/CustomCardShape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_profile"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:id="@+id/iv_profile_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_picture" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_gmail_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:letterSpacing="0"
                android:text="Ghufranbakrie@gmail.com"
                android:textColor="#A2A2B5"/>

            <TextView
                android:id="@+id/name_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/plut_kupie"
                android:textSize="20sp"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit profile"
                app:strokeColor="#727272"
                android:layout_marginTop="15dp"
                android:backgroundTint="#1AFFFFFF"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="32dp"
                android:fontFamily="@font/inter_semibold"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                app:strokeColor="#727272"
                app:cardCornerRadius="20dp"
                android:backgroundTint="#2AA3A3AD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/change_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#4B535C"
                        android:text="Change Password"
                        app:iconPadding="20dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        app:icon="@drawable/ic_change_password"
                        app:iconTint="#C1C1CD"/>

                    <Button
                        android:id="@+id/da"
                        android:textAlignment="textStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#4B535C"
                        android:text="Logout"
                        app:iconPadding="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        app:icon="@drawable/ic_logout"
                        app:iconTint="#C1C1CD"/>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>







</LinearLayout>