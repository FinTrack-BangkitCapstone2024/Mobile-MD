<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".CreateBusinessActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:letterSpacing="0.02"
            android:fontFamily="@font/inter_semibold"
            android:text="Create Your business"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:textColor="#78828A"
            android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_height="250dp"
            android:src="@drawable/ilustrator_login"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"
            android:contentDescription="@string/image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="business name"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginStart="20dp"
            android:textSize="14sp"/>


        <com.example.fintrack_bangkitcapstone2024.Component.CvName
            android:id="@+id/cv_name_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:letterSpacing="0.02"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_ed"
            android:hint="@string/enter_your_business_name" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="13dp"
            android:text="Location business"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginStart="20dp"
            android:textSize="14sp"/>

        <com.example.fintrack_bangkitcapstone2024.Component.CvName
            android:id="@+id/cv_location_Business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:letterSpacing="0.02"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_ed"
            android:hint="Enter " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="13dp"
            android:text="Type of business"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginStart="20dp"
            android:textSize="14sp"/>

        <com.example.fintrack_bangkitcapstone2024.Component.CvName
            android:id="@+id/cv_type_Business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:letterSpacing="0.02"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_ed"
            android:hint="Enter " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="13dp"
            android:text="Description"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginStart="20dp"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/description_Business"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginHorizontal="20dp"
            android:letterSpacing="0.02"
            android:layout_marginTop="8dp"
            android:gravity="top|start"
            android:background="@drawable/border_ed"
            android:inputType="textMultiLine"
            android:hint="Enter " />


        <Button
            android:id="@+id/btn_create_busines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:layout_marginTop="28dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/inter"
            android:background="@drawable/border_buttom"
            app:backgroundTint="@color/black"
            android:text="Create"/>
    </LinearLayout>
</ScrollView>