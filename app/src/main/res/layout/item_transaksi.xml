<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        card_view:strokeWidth="1dp"
        app:cardElevation="2dp"
        card_view:strokeColor="#26000000"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/logo_transaksi"
                android:layout_width="40dp"
                android:layout_marginStart="12dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="250dp">
                <!-- Profile Image CardView -->

                <TextView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="@string/name"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:background="#FF0000" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/logo_transaksi"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nama_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/inter_semibold"
                    android:letterSpacing="0"
                    android:text="Adobe Illustrator" />

                <TextView
                    android:id="@+id/deskripsi_transaksi"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Subcription fee sadadasdsa" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/jumlah_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/inter_semibold"
                    android:letterSpacing="0"
                    android:text="-Rp320.000"
                    android:textSize="16sp" />

                    <TextView
                        android:id="@+id/date_transakasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="minggu 20 Desember 2024"
                        android:layout_gravity="end"
                        android:textColor="#9E000000"
                        android:textSize="12sp" />
                </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>